@page "/Usuarios/Registrar"
@model RegistrarModel
@{
    ViewData["Title"] = "Register";
}
<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">    
            <div class="span12 text-center">
                <form method="post">
                    <img src="~/Images/logo.png" class="mx-auto w-50" />
                    <div class="form-group row justify-content-center h-100">
                        <div class="col">
                            <input asp-for="Input.PrimerNombre" placeholder="First Name" class="form-control"/>
                            <span asp-validation-for="Input.PrimerNombre" class="text-danger" ></span>
                        </div>
                        <div class="col">
                            <input asp-for="Input.SegundoNombre" placeholder="Second Name" class="form-control" />
                            <span asp-validation-for="Input.SegundoNombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center h-100">
                        <div class="col">
                            <input asp-for="Input.PrimerApellido" placeholder="Surname" class="form-control" />
                            <span asp-validation-for="Input.PrimerApellido" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Input.SegundoApellido" placeholder="Second Surname" class="form-control" />
                            <span asp-validation-for="Input.SegundoApellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Telefono" placeholder="Phone Number" class="form-control"/>
                        <span asp-validation-for="Input.Telefono"  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block text-light" style="background: #01c7b8;">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}
